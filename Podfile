    pod 'Stella', git: 'https://github.com/icapps/ios-stella.git', commit: '19e1636f25cab2ca429810c18d768b09ae393531'

  target 'RxBeersTests' do
    inherit! :search_paths
    # Pods for testing

    pod 'Quick', '~> 1.3'
    pod 'Nimble', '~> 7.1'
    
  end

end
